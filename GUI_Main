            private void jButton4ActionPerformed(ActionEvent evt) {
            //        Random randomNumber= rand;
        // TODO add your handling code here:
        
        //jLabel muuttuja
        javax.swing.JLabel targetLabel;
        //tee tähän yleispätevä image kenttä esim im
        
            Image imTemp; 
        int iKorttiPositio = 1;
        
        for (Kortti kortti : kortitKasi) {
            //Mitä labelia muutetaan
            switch (iKorttiPositio) {
                case 1:
                    targetLabel = jLabel1;
                    break;
                case 2:
                    targetLabel = jLabel2;
                    break;
                case 3:
                    targetLabel = jLabel3;
                    break;
                case 4:
                    targetLabel = jLabel4;
                    break;
                default:
                    targetLabel = jLabel5;
                    break;
                    
            }

            //Mikä kortin tiedostonimi on?
            String sKuvannimi = kortti.getKorttiTiedostoNimi();
           

            
            //targetLabelissä on se haluttu label
            Image im=new ImageIcon(this.getClass().getResource("/Kuvat/"+sKuvannimi+".png")).getImage();
            ImageIcon kortinKuva = new ImageIcon(im);
            
            targetLabel.setIcon(kortinKuva);

            iKorttiPositio++;


        }
            KorttiKasittely.SiirraKortitToiseenKasaan(kortitPakka, kortitKasi);

        while (kortitKasi.size() < 5) {
            //Ilmoita funktiolle mihin positioon nostettu kortti laitetaan
            //Tämä sen vuoksi että jäljelle jäävät kortit eivät siirry
            KorttiKasittely.NostaKortti(kortitPakka, kortitKasi);
        }

